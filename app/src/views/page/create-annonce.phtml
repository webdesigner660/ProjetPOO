<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer une Annonce</title>
    <link rel="stylesheet" href="style.css"> 
</head>

<body class="owner-container">
    <header>
        <h1>Créer une Nouvelle Annonce</h1>
    </header>
    <main>
        <form action="submit_annonce.php" method="POST" class="create-annonce-form">
            <!-- Titre de l'annonce -->
            <div class="form-group">
                <label for="title">Titre de l'annonce :</label>
                <input type="text" id="title" name="title" placeholder="Entrez le titre" required>
            </div>

            <!-- Prix -->
            <div class="form-group">
                <label for="price">Prix (€) :</label>
                <input type="number" id="price" name="price" placeholder="Entrez le prix" required min="0" step="0.01">
            </div>

            <!-- Adresse -->
            <div class="form-group">
                <label for="address">Adresse :</label>
                <input type="text" id="address" name="address" placeholder="Entrez l'adresse" required>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Description :</label>
                <textarea id="description" name="description" rows="5" placeholder="Ajoutez une description" required></textarea>
            </div>

            <!-- Bouton de soumission -->
            <button type="submit" class="create-announcement-button">Créer l'annonce</button>
        </form>
    </main>
    <footer>
        <p>&copy; 2024 Gestion des Annonces. Tous droits réservés.</p>
    </footer>
</body>

</html>